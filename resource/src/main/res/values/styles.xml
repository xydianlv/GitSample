<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 通常用来作为 item 划分的 分割线 -->
    <style name="my_divide_line">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="full_screen_dialog">
        <!-- 去除 DialogActivity 的 toolbar -->
        <item name="android:windowNoTitle">true</item>
        <!-- 去除边框阴影／设置背景 （目前没发现与颜色值相关） -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否浮动在界面上 （这个不能开，开了状态栏展示有问题） -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 点外边可以消失（目前不生效） -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 模糊（开了这个，可以添加原生的背景透明度） -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 显示软件盘 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>
</resources>