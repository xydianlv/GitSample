<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_wallpaper">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_ball"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_lock"
        android:layout_width="0.0dp"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center"
        android:text="@string/wallpaper_lock"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_wall"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_wall"
        android:layout_width="0.0dp"
        android:layout_height="@dimen/height_toolbar"
        android:gravity="center"
        android:text="@string/wallpaper_wall"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_lock" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_white"
        app:layout_constraintBottom_toTopOf="@id/btn_lock" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="0.0dp"
        android:background="@color/color_white"
        app:layout_constraintBottom_toBottomOf="@id/btn_lock"
        app:layout_constraintStart_toEndOf="@id/btn_lock"
        app:layout_constraintTop_toTopOf="@id/btn_lock" />

</androidx.constraintlayout.widget.ConstraintLayout>