<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_info"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_14"
        android:paddingVertical="@dimen/padding_10"
        android:text="@string/text_long_cn"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toStartOf="@id/tv_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_add"
        android:layout_width="64.0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/padding_10"
        android:text="@string/text_short_en"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_info" />

    <View
        android:id="@+id/v_line"
        style="@style/my_divide_line"
        android:layout_marginStart="@dimen/padding_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>