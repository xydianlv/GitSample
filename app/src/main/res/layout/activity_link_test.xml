<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_14"
        android:paddingVertical="@dimen/padding_10"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_15"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/re_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120.0dp"
        android:paddingHorizontal="@dimen/padding_14"
        android:paddingVertical="@dimen/padding_10"
        android:text="@string/algorithm_link_re_change"
        android:textColor="@color/color_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_re_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ct_3"
        android:textSize="@dimen/text_12"
        app:layout_constraintBottom_toBottomOf="@id/re_change"
        app:layout_constraintStart_toEndOf="@id/re_change"
        app:layout_constraintTop_toTopOf="@id/re_change" />

    <com.example.gitsample.widget.common.CommonToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>