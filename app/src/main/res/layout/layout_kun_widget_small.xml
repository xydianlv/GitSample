<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="155.0dp"
    android:layout_height="155.0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_kun_widget_bg_small" />

    <FrameLayout
        android:layout_width="198.0dp"
        android:layout_height="90.0dp"
        android:layout_marginStart="60.0dp"
        android:layout_marginTop="24.0dp"
        android:layoutAnimation="@anim/layout_kun_15_1500">

        <ImageView
            android:id="@+id/img_kun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image"
            android:scaleType="centerInside" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16.0dp"
        android:paddingTop="16.0dp"
        android:paddingEnd="0.0dp">

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a6171c"
            android:textSize="28.0dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_d25d5d"
            android:textSize="12.0dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bubble_1"
        android:layout_width="72.0dp"
        android:layout_height="72.0dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="5.0dp"
        android:layout_marginBottom="6.0dp"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/bubble_1_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bubble_0"
        android:layout_width="72.0dp"
        android:layout_height="72.0dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="5.0dp"
        android:layout_marginBottom="10.0dp"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/bubble_0_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</FrameLayout>