<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="330.0dp"
    android:layout_height="155.0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_kun_widget_bg_big" />

    <FrameLayout
        android:layout_width="220.0dp"
        android:layout_height="100.0dp"
        android:layout_gravity="end"
        android:layout_marginTop="10.0dp"
        android:layout_marginEnd="2.0dp"
        android:layoutAnimation="@anim/layout_kun_25_2000">

        <ImageView
            android:id="@+id/img_kun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image"
            android:scaleType="centerInside" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12.0dp"
        android:paddingTop="12.0dp"
        android:paddingEnd="0.0dp">

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a6171c"
            android:textSize="32.0dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_d25d5d"
            android:textSize="12.0dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bubble_3"
        android:layout_width="72.0dp"
        android:layout_height="72.0dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20.0dp"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/bubble_3_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bubble_2"
        android:layout_width="72.0dp"
        android:layout_height="72.0dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="72.0dp"
        android:layout_marginBottom="14.0dp"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/bubble_2_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bubble_1"
        android:layout_width="72.0dp"
        android:layout_height="72.0dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="144.0dp"
        android:layout_marginBottom="16.0dp"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/bubble_1_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bubble_0"
        android:layout_width="72.0dp"
        android:layout_height="72.0dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="216.0dp"
        android:layout_marginBottom="22.0dp"
        android:visibility="invisible">

        <FrameLayout
            android:id="@+id/bubble_0_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</FrameLayout>