<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20.0dp"
    android:paddingTop="80.0dp">

    <com.example.gitsample.canvas.path.CanvasPathSwitchView
        android:id="@+id/cp_switch"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_guide"
        android:layout_width="1.0dp"
        android:layout_height="1.0dp"
        android:layout_marginTop="40.0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_10"
        android:text="@string/text_short_cn"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_guide"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_info_00"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_6"
        android:layout_marginEnd="@dimen/padding_14"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_long_cn"
        android:textColor="@color/ct_2"
        android:textSize="@dimen/text_12"
        app:layout_constraintEnd_toStartOf="@id/v_guide"
        app:layout_constraintStart_toStartOf="@id/tv_left_title"
        app:layout_constraintTop_toBottomOf="@id/v_guide" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_left_info_01"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_4"
        android:layout_marginEnd="@dimen/padding_14"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="20.0dp"
        android:text="@string/text_long_cn"
        android:textColor="@color/ct_2"
        android:textSize="@dimen/text_12"
        app:layout_constraintEnd_toStartOf="@id/v_guide"
        app:layout_constraintStart_toStartOf="@id/tv_left_title"
        app:layout_constraintTop_toBottomOf="@id/tv_left_info_00" />

    <View
        android:id="@+id/v_click_left"
        android:layout_width="0.0dp"
        android:layout_height="0.0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_guide"
        app:layout_constraintStart_toStartOf="@id/tv_left_title"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_14"
        android:text="@string/text_short_cn"
        android:textColor="@color/ct_1"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_guide"
        app:layout_constraintStart_toEndOf="@id/v_guide" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_info_00"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_6"
        android:layout_marginEnd="@dimen/padding_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_long_cn"
        android:textColor="@color/ct_2"
        android:textSize="@dimen/text_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_right_title"
        app:layout_constraintTop_toBottomOf="@id/v_guide" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_info_01"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_6"
        android:layout_marginEnd="@dimen/padding_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="20.0dp"
        android:text="@string/text_long_cn"
        android:textColor="@color/ct_2"
        android:textSize="@dimen/text_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_right_title"
        app:layout_constraintTop_toBottomOf="@id/tv_right_info_00" />

    <View
        android:id="@+id/v_click_right"
        android:layout_width="0.0dp"
        android:layout_height="0.0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_guide"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>