<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.gitsample.widget.common.CommonToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_14"
        android:src="@mipmap/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alert_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_14"
        android:text="@string/shortcut_alert_shortcut"
        android:textColor="@color/ct_3"
        android:textSize="@dimen/text_15"
        app:layout_constraintStart_toStartOf="@id/logo_shortcut"
        app:layout_constraintTop_toBottomOf="@id/logo_shortcut" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_14"
        android:src="@mipmap/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_shortcut" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alert_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_14"
        android:text="@string/shortcut_alert_dynamic"
        android:textColor="@color/ct_3"
        android:textSize="@dimen/text_15"
        app:layout_constraintStart_toStartOf="@id/logo_dynamic"
        app:layout_constraintTop_toBottomOf="@id/logo_dynamic" />

</androidx.constraintlayout.widget.ConstraintLayout>